{
  "agent": {
    "model_name": "gpt-3.5-turbo",
    "temperature": 0.7,
    "max_tokens": 500,
    "learning_rate": 0.001,
    "memory_size": 10000
  },
  "environment": {
    "num_patients": 100,
    "disease_stages": ["healthy", "mild", "moderate", "severe"],
    "available_biomarkers": [
      "amyloid_beta",
      "tau_protein",
      "apoe4",
      "brain_volume",
      "cognitive_score"
    ],
    "max_steps": 50
  },
  "reward_function": {
    "safety_weight": 0.3,
    "validity_weight": 0.3,
    "impact_weight": 0.2,
    "ethics_weight": 0.2
  },
  "training": {
    "num_episodes": 100,
    "max_steps_per_episode": 50,
    "save_frequency": 10,
    "log_frequency": 1,
    "checkpoint_dir": "./checkpoints"
  }
}
